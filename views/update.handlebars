<div class="row">
  <div class="col-auto">
    <h2>Update {{title}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Post:</h3>

    <form class="form update-post-form">
      <div class="form-group">
        <label for="post-title">Title:</label>
        <input class="form-input" type="text" id="post-title" name="post-title" value="{{title}}"/>
      </div>
      <div class="form-group">
        <label for="post-content">Post:</label>
        <input class="form-input" type="text" id="post-content" name="post-content" value="{{content}}">
      </div>
      <input class="post-id" type="hidden" id="post-id" value ="{{id}}"/>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Update</button>
      </div>
    </form>
  </div>
  <script src="/js/update.js"></script>